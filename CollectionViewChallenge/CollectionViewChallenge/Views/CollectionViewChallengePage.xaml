<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:context="clr-namespace:ContextMenu;assembly=ContextMenu"
             x:Class="CollectionViewChallenge.Views.CollectionViewChallengePage">
    <ContentPage.Content>
        <ListView x:Name="SampleList"
                  RowHeight="80"
                  BackgroundColor="Black"
                  SeparatorVisibility="None">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <context:SideActionBarCell>
                        <context:SideActionBarCell.Content>
                            <StackLayout Margin="0, 5" 
                                         BackgroundColor="White"
                                         Orientation="Horizontal"
                                         WidthRequest="{Binding Source={x:Reference SampleList}, Path=Width}">
                                <Label TextColor="Black"
                                       FontSize="30"
                                       HorizontalOptions="CenterAndExpand"
                                       VerticalOptions="CenterAndExpand"
                                       Text="{Binding .}"/>
                                <Button TextColor="White"
                                        HorizontalOptions="End"
                                        VerticalOptions="CenterAndExpand"
                                        FontSize="12"
                                        WidthRequest="50"
                                        HeightRequest="50"
                                        CornerRadius="25"
                                        BackgroundColor="Black"
                                        Margin="10, 0"
                                        Text="open" 
                                        Clicked="OnOpenClicked"/>
                            </StackLayout>
                        </context:SideActionBarCell.Content>
                        <context:SideActionBarCell.ContextTemplate>
                            <DataTemplate>
                                <StackLayout Spacing="0"
                                             Margin="0, 5"
                                             HorizontalOptions="Fill"
                                             Orientation="Horizontal">
                                    
                                    <Button WidthRequest="80"
                                            BackgroundColor="Red"
                                            TextColor="Black"
                                            Text="Red"
                                            CommandParameter="Red"
                                            Margin="5, 0, 0, 0"
                                            Clicked="OnClicked"/>
                                    <Button WidthRequest="80"
                                            BackgroundColor="Yellow"
                                            TextColor="Black"
                                            Text="Yellow"
                                            CommandParameter="Yellow"
                                            Margin="5, 0, 5, 0"
                                            Clicked="OnClicked"/>
                                    <Button WidthRequest="80"
                                            BackgroundColor="Green"
                                            TextColor="Black"
                                            Text="Green"
                                            CommandParameter="Green"
                                            Margin="0, 0, 5, 0"
                                            Clicked="OnClicked"/>
                                </StackLayout>
                            </DataTemplate>
                        </context:SideActionBarCell.ContextTemplate>
                    </context:SideActionBarCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>