<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="CollectionViewChallenge.Views.CollectionViewChallengePage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             BackgroundColor="White">
  <ScrollView VerticalScrollBarVisibility="Never">
        <StackLayout Margin="0,20,0,0" 
                     Spacing="0" 
                     BackgroundColor="#f2f2f2">
            <StackLayout Orientation="Horizontal" 
                         BackgroundColor="White">
            <StackLayout BackgroundColor="White" 
                         HorizontalOptions="FillAndExpand" 
                         Margin="0,0,10,0">
                <Label Text="ENTREGAR" 
                       TextColor="#b7b4b1" 
                       FontSize="18" 
                       Margin="20,0,0,5"/>
                <FlexLayout Direction="Row"
                            VerticalOptions="Center" 
                            JustifyContent="SpaceAround"
                            AlignItems="End"
                            Margin="20,0,10,0">
                    <Label Text="Agora" 
                           FontSize="20" 
                           FontAttributes="Bold"/>
                    <Label Text=" v " 
                           TextColor="Red" 
                           FontAttributes="Bold" 
                           Font="20"/>
                    <Label>
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="em "/>
                                <Span Text="Rua dos Bobos, 0" 
                                      FontSize="20" 
                                      FontAttributes="Bold"/>
                                <Span Text=" v " TextColor="Red" FontAttributes="Bold" Font="20"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </FlexLayout>
            </StackLayout>
            <Image Source="https://www.materialui.co/materialIcons/action/face_black_192x192.png" 
                   WidthRequest="50" 
                   HeightRequest="50"
                   Margin="0,0,10,0"/>
            </StackLayout>
            <FlexLayout Direction="Row" 
                        JustifyContent="SpaceAround"
                        BackgroundColor="White" Padding="0, 10, 0, 0">
                <SearchBar BackgroundColor="White" 
                           WidthRequest="300" 
                           Placeholder="Prato ou restaurante"/>
                <Button Text="Filtros" 
                        TextColor="Red"
                        FontSize="20"/>
            </FlexLayout>
           
            <StackLayout HeightRequest="260" 
                         BackgroundColor="White">
                <CollectionView ItemsSource="{Binding Promocoes}">
                    <CollectionView.ItemsLayout>
                        <ListItemsLayout>
                            <x:Arguments>
                                <ItemsLayoutOrientation>Horizontal</ItemsLayoutOrientation> 
                            </x:Arguments>
                        </ListItemsLayout>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout Spacing="5" Padding="15, 15, 0, 0">
                                <Image Source="{Binding Foto}" 
                                      WidthRequest="350" 
                                      HeightRequest="200"/>
                                <Label Text="{Binding Descricao}"/>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
            <StackLayout BackgroundColor="White" 
                         Padding="0,10,0,0" 
                         Margin="0, 10, 0, 10"
                         HeightRequest="80">
                <Image Source="qrcode.png"/>
            </StackLayout>
            
            <!-- CATEGORIAS -->
            <StackLayout BackgroundColor="White" 
                         HeightRequest="200"
                         Padding="20, 20, 0, 0"
                         Margin="0, 0, 0, 10">
                <Label Text="Categorias"
                       FontAttributes="Bold"
                       FontSize="20"/>
                <CollectionView ItemsSource="{Binding Categorias}">
                    <CollectionView.ItemsLayout>
                        <ListItemsLayout>
                            <x:Arguments>
                                <ItemsLayoutOrientation>Horizontal</ItemsLayoutOrientation>    
                            </x:Arguments>
                        </ListItemsLayout>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                             <StackLayout Spacing="15" 
                                          Padding="0, 10, 10, 0">
                                <Image Source="{Binding Foto}" />
                                <Label Text="{Binding Nome}" 
                                       HorizontalTextAlignment="Center"
                                       TextColor="#b7b4b1"/>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
            
          <!-- ULTIMOS RESTAURANTES -->
            <StackLayout BackgroundColor="White" 
                       Padding="20,10,0,0" 
                       HeightRequest="180">
                <FlexLayout Direction="Row" JustifyContent="SpaceBetween" Margin="0,0,10,0">
                    <Label Text="Ultimos restaurantes" 
                           Margin="0,10,0,20"
                           FontAttributes="Bold"
                           FontSize="20"/>
                    <Label Text="Ver mais" Margin="0,10,0,20" TextColor="Red"/>
                </FlexLayout>
                <CollectionView ItemsSource="{Binding Restaurantes}">
                    <CollectionView.ItemsLayout>
                        <ListItemsLayout>
                            <x:Arguments>
                                <ItemsLayoutOrientation>Horizontal</ItemsLayoutOrientation>    
                            </x:Arguments>
                        </ListItemsLayout>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <StackLayout>
                                <Frame WidthRequest="300" 
                                       HeightRequest="80"
                                       Padding="10"
                                       HasShadow="false"
                                       OutlineColor="#CCC"
                                       Margin="5">
                                    <StackLayout Orientation="Horizontal" 
                                                 VerticalOptions="Center" 
                                                 Spacing="20"
                                                 Margin="10">
                                        <Image Source="{Binding Foto}"/>
                                        <Label Text="{Binding Nome}" VerticalTextAlignment="Center"/>
                                    </StackLayout>
                                </Frame>
                            </StackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

            <!-- RESTAURANTES -->
            <Frame BackgroundColor="White" 
                   Padding="0,10,0,0" 
                   HeightRequest="500"
                   HasShadow="false"
                   Margin="0,10,0,0">
                <StackLayout>
                    <Label Text="Restaurantes"
                           Margin="20,0,0,20"
                           FontAttributes="Bold"
                           FontSize="20"/>
                    <CollectionView ItemsSource="{Binding Restaurantes}">
                        <CollectionView.ItemsLayout>
                            <ListItemsLayout>
                                <x:Arguments>
                                    <ItemsLayoutOrientation>Vertical</ItemsLayoutOrientation>    
                                </x:Arguments>
                            </ListItemsLayout>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <FlexLayout Direction="Row" JustifyContent="Center" Margin="0, 10, 0, 10">
                                        <Image Source="{Binding Foto}" 
                                               WidthRequest="80"/>
                                            <StackLayout Margin="10,0,10,0">
                                            <Label Text="{Binding Nome}"/>
                                            <Label Text="HambÃºrguer . 50-60min . 5,2 km . $$$" 
                                                   FontSize="14"/>
                                            <Frame Padding="5,0,0,0" 
                                                   HasShadow="false" 
                                                   HeightRequest="25" 
                                                   WidthRequest="120" 
                                                   HorizontalOptions="Start" 
                                                   OutlineColor=" #CCC">
                                                <Label Text="ENTREGA VARIÃVEL" 
                                                       FontAttributes="Bold" 
                                                       FontSize="12" 
                                                       VerticalTextAlignment="Center"/>
                                            </Frame>
                                        </StackLayout>
                                        <Label Text="* 4,5" 
                                               FontSize="18" 
                                               TextColor="#dfab5e" 
                                               FontAttributes="Bold"/>
                                </FlexLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ScrollView>
</ContentPage>